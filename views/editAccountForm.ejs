<%- include('partials/_header') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src = "/scripts/password_generator.js" type = 'text/javascript'></script>
  <title>Edit a password</title>
</head>

<div class="card border-primary mb-3" style="max-width: 70rem;">
  <div class="card-body">

<div class="row mt-9">
  <div class="col-md-7 m-auto">
  <div class="card card-body">
  <h1 class="text-center mb-3"><i class="fa fa-key" aria-hidden="true"></i> Edit your password
  </h1>
<body>

  <!-- <div class="form-group">
    <label class="col-form-label mt-4" for="inputDefault">Default input</label>
    <input type="text" class="form-control" placeholder="Default input" id="inputDefault">
  </div> -->

  <div class = 'container'></div>

    <form method="POST" action="/password/<%= id %>">
    <div>
      <label for="col-form-label mt-7"><h5>Name</h5></label>
      <input type="text" id = 'name' size="50" name="name" value = '<%= name %>'>
    </div>
    <div>
      <label for="col-form-label mt-7"><h5>Email</h5></label>
      <input type="text" id="email" size="50" name = 'email' value = '<%= organizations_email %>'  >
    </div>
    <div>
      <label for="col-form-label mt-7"><h5>Password</h5></label>
      <input type="text" id="password" size="50" name = 'password' value = '<%= organizations_password %>'>
    </div>
    <div>
      <label for="col-form-label mt-7"><h5>Category</h5></label>
      <input type="text"id="password" size="50" name = 'category' value = '<%=category %>' >
    </div>

    <div class="modal-footer">
      <button type="edit" name="edit" class="btn btn-primary">Submit</button>

    </form>

</body>

</html>
