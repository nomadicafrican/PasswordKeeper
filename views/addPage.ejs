<!--Add Your Account Page-->


<!DOCTYPE html>
<%- include('partials/_header') %>

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit</title>

</head>

<div class="row mt-5">
  <div class="col-md-6 m-auto">
  <div class="card card-body">
  <h1 class="text-center mb-3"><i class="fa fa-key" aria-hidden="true"></i> Add a new account
  </h1>
<body>

  <style>
    body {
      background-color: #ECECEC;
   }
    p {
      font-size: 150%;
      border: 60px;
      padding: 60px;
   };
  </style>

<div class="card bg-light mb-" style="max-width: 100rem;">
  <div class="card-header">Provide details about your new account</div>
  <div class="card-body">

  <form method="POST" action="/add/<%= organization_id%>">
  <div class = 'container'></div>

    <label for="text" class="form-label mt-3"><h5>Name</h5></label>
    <input type="text" id="name" size="50" name = 'name' value =''>

    <label for="text" class="form-label mt-3"><h5>Username</h5></label>
    <input type="text" id="ogranizations_email" size="50" name ='organizations_email'value =''>

    <label for="text" class="form-label mt-3"><h5>Password</h5></label>
    <input type="text" id="organizations_password" size="50" name = 'organizations_password' value = ''>

    <label for="exampleSelect1" class="form-label mt-3"><h5>Category</h5></label>
    <input type="text" id="category" size="50" name = 'category' value =''>

    <label for="exampleSelect1" class="form-label mt-3"><h5>Organization ID</h5></label>
    <input type="text" id="oganization_id"  size="50" name = 'organization_id' value ="<%= organization_id%>">

    <div class="d-grid gap-2">
      <div class="modal-footer">
        <button class="btn btn-lg btn-primary" type="submit">Create an account</button>
      </div>
    </div>
    <!-- <button class="btn btn-lg btn-primary" type="submit">Generate New Password</button> -->
  </div>
  </form>
</body>

</html>
